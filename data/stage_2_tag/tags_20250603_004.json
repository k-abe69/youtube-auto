{
  "global_image_tag": "皮肉",
  "scenes": [
    {
      "scene_id": "scene_01",
      "start_sec": 0.0,
      "duration": 3.23,
      "text": "“親ガチャ”って甘え？\n統計的証明とは",
      "type": "main_title",
      "tags": [],
      "parent_scene_id": "001",
      "emotion": "emotion: 怒り (anger)"
    },
    {
      "scene_id": "scene_02",
      "start_sec": 3.23,
      "duration": 2.39,
      "text": "親の年収が\n子供の学力と強い相関",
      "type": "title",
      "tags": [],
      "parent_scene_id": "002",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_03",
      "start_sec": 5.62,
      "duration": 1.98,
      "text": "世帯年収が高い家庭の子どもほど、",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "002",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_04",
      "start_sec": 7.61,
      "duration": 1.69,
      "text": "国語や数学の正答率が",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "002",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_05",
      "start_sec": 9.29,
      "duration": 1.93,
      "text": "有意に高い傾向が確認されている。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "003",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_06",
      "start_sec": 11.22,
      "duration": 2.31,
      "text": "塾通いや参考書などの教材投資が",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "003",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_07",
      "start_sec": 13.54,
      "duration": 1.47,
      "text": "学力差に直結しており、",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "003",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_08",
      "start_sec": 15.01,
      "duration": 0.97,
      "text": "経済格差が",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "004",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_09",
      "start_sec": 15.98,
      "duration": 2.04,
      "text": "学力格差に転化している実態がある。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "004",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_10",
      "start_sec": 18.02,
      "duration": 4.3,
      "text": "貧困層出身者の\n“這い上がり率”\nはわずか13%",
      "type": "title",
      "tags": [],
      "parent_scene_id": "005",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_11",
      "start_sec": 22.31,
      "duration": 2.25,
      "text": "日本では貧困層出身の子どもが",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "005",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_12",
      "start_sec": 24.57,
      "duration": 2.1,
      "text": "中間層以上に到達する割合は",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "005",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_13",
      "start_sec": 26.67,
      "duration": 1.73,
      "text": "わずか13%にとどまる。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "006",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_14",
      "start_sec": 28.39,
      "duration": 1.53,
      "text": "これは先進国の中でも",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "006",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_15",
      "start_sec": 29.92,
      "duration": 2.11,
      "text": "社会的流動性が低い水準であり、",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "006",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_16",
      "start_sec": 32.03,
      "duration": 0.85,
      "text": "努力だけでは",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "007",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_17",
      "start_sec": 32.89,
      "duration": 2.15,
      "text": "格差を超えにくい構造が存在している。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "007",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_18",
      "start_sec": 35.04,
      "duration": 1.88,
      "text": "“努力できるか”\nも家庭で決まる",
      "type": "title",
      "tags": [],
      "parent_scene_id": "008",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_19",
      "start_sec": 36.92,
      "duration": 1.8,
      "text": "自制心や自己効力感といった",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "008",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_20",
      "start_sec": 38.72,
      "duration": 1.66,
      "text": "「努力する力」自体も、",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "008",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_21",
      "start_sec": 40.38,
      "duration": 1.62,
      "text": "幼少期の家庭内対話や",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "009",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_22",
      "start_sec": 42.01,
      "duration": 2.14,
      "text": "親の反応パターンに強く影響される。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "009",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_23",
      "start_sec": 44.15,
      "duration": 1.77,
      "text": "本人の意思の問題に見えても、",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "009",
      "emotion": "emotion: 悲しみ (sadness)"
    },
    {
      "scene_id": "scene_24",
      "start_sec": 45.92,
      "duration": 1.03,
      "text": "環境要因が",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "010",
      "emotion": "emotion: 無感情・中立 (neutral)"
    },
    {
      "scene_id": "scene_25",
      "start_sec": 46.95,
      "duration": 1.59,
      "text": "その土台を大きく左右している。",
      "type": "summary",
      "tags": [],
      "parent_scene_id": "010",
      "emotion": "emotion: 無感情・中立 (neutral)"
    }
  ]
